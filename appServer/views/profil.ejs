<% include layout/head %>
<%if (dataUser.veryfi){%>
<h1><%= page.title %></h1>
<h2><%= page.name %></h2>
<p>User to <%= dataUser %></p>
<p>Welcome to <%= page.lan %></p>
<% if (dataUser.picture) {%>
<img src="<%=dataUser.picture%>" id="profilPhoto" alt="my profile photo">
<%}else{%>
<label>
    <input type="file" style="display: none" name="uploadFiles" id="uploadFiles" >
    <span class="btn btn-primary">Add files</span>
</label>

<%}%>
<form id="nameBtn">
    <label>
        <input type="text" placeholder="<%= dataUser.name %>" id="nameChange">
    </label>
    <button type="submit" >Change</button>
</form>
<hr>
<form id="emailBtn">
    <label>
        <input type="email" placeholder="<%= dataUser.email %>" id="emailChange">
    </label>
    <button type="submit" >Change</button>
</form>
<hr>
<form id="pswBtn">
    <label>
        <input type="password" placeholder="<%= dataUser.password %>" id="psw1Change">
    </label>
    <label>
        <input type="password" placeholder="<%= dataUser.password %>" id="psw2Change">
    </label>
    <label>
        <input type="password" placeholder="<%= dataUser.password %>" id="psw3Change">
    </label>
    <button type="submit" >Change</button>
</form>
<hr>
<div class="container">
    <h1>File Uploads</h1>
    <hr>
    <input type="file" style="display: none" name="uploadFiles" id="uploadFiles" >
    <div style="margin-bottom:15px">
        <button id="addFilesButton" class="btn btn-primary">Add files</button>
        <button id="uploadAllFilesButton" style="margin-left:5px" class="btn btn-primary">Upload All</button>
    </div>
    <div class="progress">
        <div id="progress" role="progressbar" style="width: 0%" class="progress-bar"></div>
    </div>
    <table id="files" class="table"></table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<!--<script src="/js/bootstrap.min.js"></script>-->
<script src="/javascripts/image.upload.js"></script>
<script>
    $('#nameBtn').submit((e)=>sendChange(e,{name: $("#nameChange").val()},"/nameChange"));
    $('#emailBtn').submit((e)=>sendChange(e,{email: $("#emailChange").val()},"/emailChange"))
    $('#pswBtn').submit((e)=>sendChange(e,{
        psw1: $("#psw1Change").val(),
        psw2: $("#psw2Change").val(),
        psw3: $("#psw3Change").val()
    },"/pswChange"))
</script>
<%}else{%>
<% include confirm %>
<%}%>
<% include layout/footer %>